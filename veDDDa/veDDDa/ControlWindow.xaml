<Window x:Class="veDDDa.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:veDDDa"
        mc:Ignorable="d"
        Title="ControlWindow" Height="200" Width="300">
    <Grid Background="#FFFF7700">
        <Grid Margin="20">
            <UniformGrid Columns="1">

                <Slider IsSnapToTickEnabled="True" TickFrequency="1" Width="200"></Slider>
                <TextBlock VerticalAlignment="Center">
                    <Run FontWeight="Black">Watching file : </Run>
                    <Run x:Name="textRunFilepath">C:\filepath\shader.glsl</Run>
                </TextBlock>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
